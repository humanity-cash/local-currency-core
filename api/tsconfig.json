{
    "compilerOptions": {
        "resolveJsonModule": true,
        "lib": [
            "es6",
            "es7"
        ],
        "types": [
            "mocha",
            "node"
        ],
        "declaration": true,
        "noUnusedLocals": true,
        "module": "commonjs",
        "noImplicitAny": false,
        "baseUrl": "./",
        "paths": {
            "src/*": [
                "./src/*"
            ],
        },
        "removeComments": true,
        "preserveConstEnums": true,
        "outDir": "./dist/",
        "rootDir": "./src/",
        "sourceMap": true,
        "skipLibCheck": true,
        "allowJs": true,
        "esModuleInterop": true
    },
    "include": [
        "src/**/*",
        "src/**/*.test.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}