{
  "name": "berkshares-api",
  "version": "0.0.1",
  "description": "Simple REST API to query and inititate actions on the Berkshares smart contracts",
  "main": "index.js",
  "repository": "https://github.com/humanity-cash/berkshares-core.git",
  "author": "Aaron Boyd <aaron@keyko.io)",
  "contributors": [
    "Aaron Boyd Keyko GmbH",
    "Sebastian Gerske Keyko GmbH"
  ],
  "license": "MIT",
  "scripts": {
    "test": "mocha --timeout 10000 --exit --require ts-node/register ./src/test/*",
    "coverage": "nyc yarn test",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "build:docker": "yarn build && sudo docker build -t keykoio/berkshares-api:latest .",
    "start": "node ./dist/index.js",
    "eslint": "npx eslint src/**/*.ts src/**/**/*.ts",
    "prettier": "prettier --write ./src/**/**/*.ts ./src/**/*.ts",
    "snyk-protect": "snyk protect",
    "prepare": "npm run snyk-protect"
  },
  "dependencies": {
    "@celo/contractkit": "^1.2.0",
    "axios": "^0.21.0",
    "cors": "^2.8.5",
    "ed25519-supercop": "^2.0.1",
    "ethers": "^5.0.17",
    "express": "^4.17.1",
    "morgan": "^1.10.0",
    "web3": "^1.3.0"
  },
  "devDependencies": {
    "@types/mocha": "^8.0.4",
    "@typescript-eslint/eslint-plugin": "^4.8.1",
    "@typescript-eslint/parser": "^4.8.1",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "dotenv": "^8.2.0",
    "eslint": "^7.13.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-config-standard": "^16.0.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "mocha": "^8.2.0",
    "nyc": "^15.1.0",
    "prettier": "^2.1.2",
    "snyk": "^1.424.4",
    "ts-node": "^9.0.0",
    "tslint": "^6.1.3",
    "typescript": "^4.0.5",
    "uuid": "^8.3.1"
  },
  "snyk": true
}
