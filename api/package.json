{
  "name": "berkshares-api",
  "version": "0.0.1",
  "description": "Simple REST API to query and inititate actions on the Berkshares smart contracts",
  "main": "index.js",
  "repository": "https://github.com/humanity-cash/berkshares-core.git",
  "author": "Aaron Boyd <aaron@keyko.io)",
  "contributors": [
    "Aaron Boyd Keyko GmbH",
    "Sebastian Gerske Keyko GmbH",
    "Esraa Jbara Keyko GmbH"
  ],
  "license": "MIT",
  "scripts": {
    "test:contracts": "jest --passWithNoTests --forceExit --detectOpenHandles --testPathPattern='crypto'  --verbose --config=jest.config.js",
    "test:db": "jest --passWithNoTests --forceExit --detectOpenHandles --testPathPattern='integration' --config=jest.db.config.js",
    "coverage": "yarn test:contracts --coverage",
    "build:watch": "tsc --watch",
    "build": "tsc",
    "build:docker": "yarn build && sudo docker build -t keykoio/berkshares-api:latest .",
    "start": "yarn build && node ./dist/index.js",
    "start:watch": "ts-node-dev  --respawn --transpile-only src/index.ts",
    "eslint": "npx eslint src/**/*.ts src/**/**/*.ts",
    "prettier": "prettier --write ./src/**/**/*.ts ./src/**/*.ts",
    "snyk-protect": "snyk protect",
    "prepare": "npm run snyk-protect"
  },
  "dependencies": {
    "@celo/contractkit": "^1.2.0",
    "axios": "^0.21.0",
    "cors": "^2.8.5", 
    "mongoose": "^5.12.14",
    "ed25519-supercop": "^2.0.1",
    "express": "^4.17.1",
    "express-validator": "^6.11.1",
    "morgan": "^1.10.0",
    "uuid": "^8.3.1",
    "web3": "1.3.5"
  },
  "devDependencies": {
    "@types/faker": "^5.5.6",
    "@types/jest": "^26.0.23",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.8.1",
    "@typescript-eslint/parser": "^4.8.1",
    "dotenv": "^8.2.0",
    "eslint": "^7.13.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-config-standard": "^16.0.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "module-alias": "^2.2.2",
    "mongodb-memory-server": "^7.2.0",
    "faker": "^5.5.3",
    "jest": "^27.0.4",
    "prettier": "^2.1.2",
    "snyk": "^1.424.4",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "ts-node": "^9.0.0",
    "ts-node-dev": "^1.1.6",
    "tslint": "^6.1.3",
    "typescript": "^4.0.5"
  },
  "snyk": true
}
